---
import Estructura from "../Components/Estructura.astro";
---

<Estructura>
	<div class="mx-[25%] mt-[25vh] bg-white p-[20px] h-[400px] rounded-md shadow-xl place-content-center">
		<form target="_blank" action="https://formsubmit.co/santyavella21@gmail.com" method="POST">
			<div class="form-group">
			  <div class="form-row">
				<div class="col">
				  <input type="text" name="name" class="form-control" placeholder="Full Name" required>
				</div>
				<div class="col">
				  <input type="email" name="email" class="form-control" placeholder="Email Address" required>
				</div>
			  </div>
			</div>
			<div class="form-group">
			  <textarea placeholder="Your Message" class="form-control" name="message" rows="10" required></textarea>
			</div>
			<button type="submit" class="btn btn-lg btn-dark btn-block">Submit Form</button>
		  </form>
	</div>
</Estructura>


